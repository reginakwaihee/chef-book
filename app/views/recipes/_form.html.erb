<div class="container">
  <%= render 'shared/error-msg', obj: @recipe %>

  <div class="row">
    <div class="col-md-12">
      <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="col-md-2 control-label">
            <%= f.label :name %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :name, class: "form-control", placeholder: "Recipe name", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-2 control-label">
            <%= f.label :description %>
          </div>
          <div class="col-md-8">
            <%= f.text_area :description, class: "form-control", rows: 20, placeholder: "Describe the steps here" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-8">
            <%= f.submit(@recipe.new_record? ? "Create" : "Edit", class: "btn btn-default") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-offset-2">
    <p><small><%= link_to "Cancel and return to view all recipes", recipes_path %></small></p>
  </div>
</div>
