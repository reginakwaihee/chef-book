<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= render 'shared/page_title', title: @recipe.name %>

      <h3>How to do it</h3>
      <p><%= simple_format(@recipe.description) %></p>

      <div class="recipe-actions">
        <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-xs btn-warning" %>
        <%= link_to "Delete this recipe", recipe_path(@recipe), method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" }, class: "btn btn-xs btn-danger" %>
      </div>

      <div class="created-by">
        <p><%= link_to gravatar_for(@recipe.chef, size: 50), recipes_path %></p>
        <p>Shared by <%= @recipe.chef.chefname %> <%=time_ago_in_words(@recipe.updated_at) %> ago</p>
      </div>
    </div>
  </div>
</div>
