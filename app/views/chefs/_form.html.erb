  <%= render 'shared/error-msg', obj: @chef %>

  <div class="row">
    <div class="col-md-12">
      <%= form_for(@chef, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="col-md-2 control-label">
            <%= f.label :chefname, "Choose chefname" %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :chefname, class: "form-control", placeholder: "Enter your name", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-2 control-label">
            <%= f.label :email %>
          </div>
          <div class="col-md-8">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-2 control-label">
            <%= f.label :password %>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Choose your password" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-2 control-label">
            <%= f.label :password_confirmation, "Confirm password" %>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= f.submit(@chef.new_record? ? "Create my account" : "Update account information", class: "btn btn-primary btn-lg") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-offset-2">
    <p><small><%= link_to "Cancel and return to view all recipes", recipes_path %></small></p>
  </div>
